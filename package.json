{
	"name": "react-ts-app",
	"version": "1.0.0",
	"description": "React app boilerplate setup with vite, vite-pwa, zod and react-router.",
	"repository": "https://github.com/rohitreddygr8/react-ts-app.git",
	"author": "rohitreddygr8",
	"license": "GPL-3.0-only",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build --mode development",
		"build:prod": "tsc && vite build --mode production",
		"start": "vite preview",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"commit": "git cz",
		"commit:all": "git add ./ && yarn commit",
		"postinstall": "husky install"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"dependencies": {
		"axios": "^1.4.0",
		"firebase": "^9.23.0",
		"gsap": "^3.12.1",
		"input-range-scss": "^1.5.3",
		"postcss": "^8.4.21",
		"postcss-preset-env": "^8.0.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-error-boundary": "^4.0.10",
		"react-helmet-async": "^1.3.0",
		"react-hls-player": "^3.0.7",
		"react-loading-skeleton": "^3.2.0",
		"react-query": "^3.39.3",
		"react-router-dom": "^6.10.0",
		"react-toastify": "^9.1.3",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@types/node": "^18.15.5",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/react-helmet": "^6.1.6",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"@vitejs/plugin-react-swc": "^3.0.0",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.0",
		"prettier": "^2.8.8",
		"sass": "^1.62.1",
		"typescript": "^4.9.3",
		"vite": "^4.2.0",
		"vite-plugin-pwa": "^0.14.7",
		"vite-plugin-svgr": "^2.4.0",
		"workbox-build": "^6.5.4",
		"workbox-window": "^6.5.4"
	}
}
